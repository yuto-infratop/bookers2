<div class="container">
    <div class="col-xs-4">

        <h2>User info</h2>

        <%= form_for(@user) do |f| %>
        <div class="form-group has-icon">
            <label class="control-label" for="inputEmail">Name</label>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
            <div class="form-group has-icon">
                <label class="control-label" for="inputEmail">Image</label>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
            </div>
            <label class="control-label" for="inputEmail">introduction</label>
            <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:""%>
            <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
        </div>
        <%= f.submit "Update User", class:"btn btn-primary btn-block " %>
        <% end %>
    </div>
</div>
